<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.MainActivity">

    <TextView
        android:id="@+id/tvShareWhattsapp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Compartilhar no whattsapp:"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/btShareOptions"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btShareOptions"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="SHARE OPTIONS"
        app:layout_constraintTop_toBottomOf="@id/tvShareWhattsapp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btShareWhatsapp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="SHARE WHATSAPP"
        app:layout_constraintTop_toBottomOf="@id/btShareOptions"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <Button
        android:id="@+id/btShareEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="SHARE EMAIL"
        app:layout_constraintTop_toBottomOf="@id/btShareWhatsapp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>